<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DisplayMessage1Activity" android:background="@android:color/background_dark">


    <EditText android:id="@+id/edit_message"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:inputType="phone"
              android:hint="@string/edit_message" android:background="@android:color/background_light"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_send"
            android:layout_marginTop="13dp"
            android:onClick="sendMessage" android:textStyle="bold"
            android:id="@+id/button" android:layout_below="@+id/edit_message"
            android:layout_alignLeft="@+id/edit_message" android:background="@android:color/holo_blue_light"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surprise"
            android:onClick="sendMessage1" android:textStyle="bold"
            android:id="@+id/button2"
            android:background="@android:color/holo_blue_light"
            android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/button"/>

    <Button android:layout_height="wrap_content" android:text="@string/title_activity_call"
            android:layout_width="wrap_content" android:id="@+id/btnCall"
            android:textStyle="bold"
            android:background="@android:color/holo_blue_light" android:layout_alignTop="@+id/button2"
            android:layout_alignRight="@+id/edit_message"></Button>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:id="@+id/button3"
            android:onClick="doLaunchContactPicker"
            android:textStyle="bold" android:background="@android:color/holo_blue_light"
            android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/button2"
            android:layout_toLeftOf="@+id/btnCall"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      7      "

            android:onClick="seven" android:id="@+id/button5"
            android:layout_below="@+id/button13" android:layout_alignLeft="@+id/button2"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      8       "

            android:onClick="eight" android:layout_below="@+id/button11" android:layout_toRightOf="@+id/button13"
            android:id="@+id/button14"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      9      "

            android:onClick="nine" android:layout_below="@+id/button11" android:layout_alignLeft="@+id/button12"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      4      "

            android:onClick="four" android:layout_alignTop="@+id/button11" android:layout_toLeftOf="@+id/button11"
            android:id="@+id/button13"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      5       " android:layout_below="@+id/button8" android:layout_toRightOf="@+id/button10"
            android:id="@+id/button11"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      6      "

            android:onClick="six" android:layout_below="@+id/button7" android:layout_toRightOf="@+id/button8"
            android:id="@+id/button12"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      1      "

            android:onClick="one" android:layout_alignTop="@+id/button8" android:layout_alignLeft="@+id/button9"
            android:id="@+id/button10"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      2      "

            android:onClick="two" android:layout_centerVertical="true" android:layout_toLeftOf="@+id/button7"
            android:id="@+id/button8"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      3      "

            android:onClick="three"
            android:layout_centerVertical="true" android:layout_toRightOf="@+id/button6" android:id="@+id/button7"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      *      "

            android:onClick="star" android:layout_alignTop="@+id/button6" android:layout_toLeftOf="@+id/button6"
            android:id="@+id/button9"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      0       "

            android:onClick="zero"
            android:id="@+id/button6" android:layout_below="@+id/button14" android:layout_toRightOf="@+id/button5"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      #      "

            android:onClick="hash"
            android:id="@+id/button4" android:layout_alignTop="@+id/button6" android:layout_toRightOf="@+id/button14"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"

            android:onClick="cancel" android:layout_alignTop="@+id/button4" android:layout_toRightOf="@+id/button4"/>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_alignTop="@+id/button10"
            android:layout_alignLeft="@+id/button5"/>


</RelativeLayout>
